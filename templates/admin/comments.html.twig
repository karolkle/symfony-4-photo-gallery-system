{% extends 'base.html.twig' %}

{% block body %}
    <header role="banner">
        <h1>Admin Panel</h1>
        <ul class="utilities">
            <li class="users"><a href="admin/users/{{ app.user.id }}">Zalogowany: {{ app.user.username }}</a></li>
            <li class="logout warn"><a href="{{ path('app_logout') }}">Log Out</a></li>
        </ul>
    </header>
    <nav role="navigation">
        <ul class="main">
             <li class="dashboard"><a href="{{ path('dashboard') }}">Dashboard</a></li>
             <li class="gallery"><a href="{{ path('images') }}">Manage Images</a></li>
            <li class="write"><a href="{{ path('upload') }}">Upload</a></li>
            <li class="comments"><a href="{{ path('comments') }}">Comments</a></li>
            <li class="edit"><a href="{{ path('user_register') }}">Register Users</a></li>
            <li class="users"><a href="{{ path('users') }}">Manage Users</a></li>
         </ul>
    </nav>
    <main role="main">
        <section class="panel important">
            <h2>Manager Comments</h2>
            <table>
                <tr>
                    <th>Comment</th>
                    <th>Author</th>
                    <th>Image title</th>

                </tr>

            {% for comment in comments %}

                {{ include('admin/comments/raw.html.twig', {'comment': comment}) }}

            {% endfor %}
            </table>
        </section>
    </main>
{% endblock %}